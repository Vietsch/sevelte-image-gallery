{
  "name": "@vietsch/svelte-image-gallery",
  "version": "2.0.0",
  "author": "Volker von Vietsch",
  "license": "MIT",
  "description": "Svelte image gallery ported from react-image-gallery",
  "homepage": "https://github.com/Vietsch/svelte-image-gallery",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vietsch/svelte-image-gallery.git"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "svelte-kit sync && svelte-package",
    "buildDemo": "vite build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write ."
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.0",
    "@sveltejs/kit": "^2.5.0",
    "@sveltejs/package": "^2.3.0",
    "@types/throttle-debounce": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.43.0",
    "prettier": "^3.2.0",
    "prettier-plugin-svelte": "^3.2.2",
    "sass": "^1.74.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tslib": "^2.6.2",
    "typescript": "^5.4.0",
    "vite": "^6.3.0"
  },
  "type": "module",
  "dependencies": {
    "clsx": "^2.0.0",
    "throttle-debounce": "^5.0.0"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "svelte": "./dist/index.js",
  "module": "./dist/index.js",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "keywords": [
    "svelte",
    "sveltekit",
    "image",
    "gallery",
    "ssr"
  ],
  "files": [
    "dist"
  ]
}
